- wrap_layout :layout do
  - if current_article.data.banner_image
    - if link = current_page.data.banner_link
      %a#banner{ style: banner_style(current_article), href: link }
    - else
      #banner{ style: banner_style(current_article) }

  %section#blog
    .wrapper
      = partial "shared/post", locals: { post: current_article }
