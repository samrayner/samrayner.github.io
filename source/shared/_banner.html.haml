- if current_page.data.banner_image
  - if link = current_page.data.banner_link
    %a#banner{ style: banner_style(current_page), href: link }
  - else
    #banner{ style: banner_style(current_page) }
- elsif current_page.data.slug == "home"
  %section#banner
    %h1 Latest Projects
    .wrapper
      = window("terracoding", "http://terracoding.com", nil)
      = window("lando", "http://landocms.com", "lando")
      = window("name-and-shame", "http://nameandshameapp.com", "name-and-shame")
