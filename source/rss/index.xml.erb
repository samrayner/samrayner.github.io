<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
  <channel>

    <title><%= data.site.title %></title>
    <link><%= data.site.root_url %></link>
    <description><%= data.me.bio %></description>
    <language>en</language>
    <copyright>Copyright <%= Time.now.year %>, <%= data.site.title %></copyright>
    <docs>http://blogs.law.harvard.edu/tech/rss</docs>
    <pubDate><%= rss_published(blog.articles.first) %></pubDate>
    <lastBuildDate><%= rss_modified(blog.articles.first) %></lastBuildDate>

    <% blog.articles.each do |post| %>
      <item>

        <title><%= post.title %></title>
        <link><%= URI.join(data.site.root_url, post.url) %></link>
        <pubDate><%= rss_published(post) %></pubDate>
        <guid><%= URI.join(data.site.root_url, post.url) %></guid>

        <description><![CDATA[ <%= post.body %> ]]></description>

      </item>
    <% end %>

  </channel>
</rss>
